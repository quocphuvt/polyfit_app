<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            app:cardBackgroundColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:fontFamily="@font/teko"
                android:text="HOME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ic_reminder"
                android:layout_margin="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_bell"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/labelProfile"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#BF2C38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imv_avatar"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_UserName"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:text="Username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_startDate"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="starting date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:layout_margin="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="Height"
                                    android:textSize="10sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="#000000"
                                    android:id="@+id/tv_height"
                                    android:text="25kg"
                                    android:textAlignment="center"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:layout_margin="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="Weight"
                                    android:textAlignment="center"
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="#000000"

                                    android:id="@+id/tv_weight"
                                    android:textAlignment="center"
                                    android:text="1.8 m"
                                    android:textSize="20sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:layout_margin="5dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:text="BMI"
                                    android:textSize="10sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:textColor="#000000"
                                    android:id="@+id/tv_BMI"
                                    android:text="18"
                                    android:textSize="20sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_margin="10dp"
       android:layout_below="@+id/labelProfile"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="10dp"
           android:layout_below="@+id/labelProfile"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_weight="2"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_margin="5dp"
                   android:layout_weight="1"
                   android:background="#FFFFFF"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:text="Body parts"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_gravity="center"
                       android:gravity="center"
                        android:text="Lorem ipslum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_margin="5dp"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <com.google.android.material.card.MaterialCardView
                       app:cardCornerRadius="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:text="Tap tay"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                   </com.google.android.material.card.MaterialCardView>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>

   </androidx.core.widget.NestedScrollView>




</RelativeLayout>