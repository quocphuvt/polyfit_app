<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="userViewModel"
            type="com.example.polyfit_app.user.UserViewModel" />
    </data>
    <ScrollView
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/layoutHome"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <FrameLayout
                android:id="@+id/header"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <RelativeLayout
                    android:background="@drawable/header_gradient"
                    android:layout_height="150dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:text="Khám phá"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_xl" />

                    <com.skyfishjy.library.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ripple_reminder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        app:rb_color="#ddb6c6"
                        app:rb_duration="3000"
                        app:rb_radius="20dp"
                        app:rb_rippleAmount="4"
                        app:rb_scale="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ic_reminder"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_access_alarm_white_24dp" />
                        </LinearLayout>

                    </com.skyfishjy.library.RippleBackground>
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_avatar"
                android:layout_alignBottom="@id/header"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_height="61dp"
                        android:layout_width="61dp"
                        app:cardCornerRadius="30.25dp">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_avatar"
                                android:layout_height="60dp"
                                android:layout_weight="0"
                                android:layout_width="60dp"
                                android:src="@drawable/ic_avatar"
                                app:civ_border_color="#FFFFFF"
                                app:civ_border_width="2dp"
                                app:userAvatar="@{userViewModel.user.avatar}"
                                app:civ_circle_background_color="#fff" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <TextView
                            android:fontFamily="@font/montserrat_medium"
                            android:id="@+id/tv_UserName"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:text="@{userViewModel.user.display_name}"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_md" />

                        <TextView
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:id="@+id/tv_startDate"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            app:formatDate="@{userViewModel.user.createdAt}"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/text_sm" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/profile_card"
                android:layout_alignParentRight="true"
                android:layout_below="@id/layout_avatar"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent">

                <LinearLayout
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="3"
                    android:layout_width="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/balance"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="Đánh giá"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_sm"></TextView>

                            <TextView
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:paddingBottom="5dp"
                                app:setUserStatus="@{userViewModel.user.bmi}"
                                android:textColor="@color/content"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        app:cardBackgroundColor="@color/night"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="Height"
                                android:textAlignment="center"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_md"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_height"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="@{String.valueOf(userViewModel.user.height)}"
                                android:textAlignment="center"
                                android:textColor="@color/morning"
                                android:textFontWeight="1"
                                android:textSize="@dimen/text_md" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="60dp"
                        app:cardBackgroundColor="@color/noon"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="Weight"
                                android:textAlignment="center"
                                android:textColor="@color/title"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_weight"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="@{String.valueOf(userViewModel.user.weight)}"
                                android:textAlignment="center"
                                android:textColor="@color/content"
                                android:textFontWeight="1"
                                android:textSize="@dimen/text_md" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        app:cardBackgroundColor="@color/morning"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/montserrat_regular"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="BMI"
                                android:textAlignment="center"
                                android:textColor="@color/title"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_BMI"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:text="@{String.valueOf(userViewModel.user.bmi)}"
                                android:textAlignment="center"
                                android:textColor="@color/content"
                                android:textFontWeight="1"
                                android:textSize="@dimen/text_md" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/content_home"
                android:layout_below="@id/profile_card"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_bodyparts_home"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Chế độ ăn phổ biến"
                            android:textColor="@color/title"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_diets"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:text="Ăn gì hôm nay ?"
                            android:textColor="@color/title"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/layout_morning"
                                android:layout_height="120dp"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:id="@+id/image_bg_morning"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent"
                                    android:src="@color/morning" />

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:paddingTop="20dp">

                                    <TextView
                                        android:background="#80FFFFFF"
                                        android:gravity="center"
                                        android:layout_gravity="right"
                                        android:layout_height="wrap_content"
                                        android:layout_width="150dp"
                                        android:padding="5dp"
                                        android:text="Buổi sáng"
                                        android:textColor="@color/title"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_noon"
                                android:layout_height="120dp"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:id="@+id/image_bg_noon"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp">

                                    <TextView
                                        android:background="#80FFFFFF"
                                        android:gravity="center"
                                        android:layout_gravity="left"
                                        android:layout_height="wrap_content"
                                        android:layout_width="150dp"
                                        android:padding="5dp"
                                        android:text="Buổi trưa"
                                        android:textColor="@color/title"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_night"
                                android:layout_height="120dp"
                                android:layout_marginVertical="5dp"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:id="@+id/image_bg_night"
                                    android:layout_height="match_parent"
                                    android:layout_width="match_parent" />

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp">

                                    <TextView
                                        android:background="#80FFFFFF"
                                        android:gravity="center"
                                        android:layout_gravity="right"
                                        android:layout_height="wrap_content"
                                        android:layout_width="150dp"
                                        android:padding="5dp"
                                        android:text="Buổi chiều"
                                        android:textColor="@color/title"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_height="120dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            app:cardBackgroundColor="@color/dark_blue">

                            <RelativeLayout
                                android:id="@+id/layout_reminder"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent">

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:text="Tạo nhắc nhở"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:text="Tạo lịch nhắc để giúp \nbản thân đạt được mục tiêu"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_sm"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_height="60dp"
                                    android:layout_margin="20dp"
                                    android:layout_width="60dp"
                                    android:src="@drawable/phone_alarm" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            app:cardBackgroundColor="@color/social">

                            <RelativeLayout
                                android:id="@+id/layout_social"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent">

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:text="Cộng đồng"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:text="Tham gia cộng đồng cùng \ntrao đổi kinh nghiệm với nhau"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_sm"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_alignParentRight="true"
                                    android:layout_height="60dp"
                                    android:layout_margin="20dp"
                                    android:layout_width="60dp"
                                    android:src="@drawable/connection" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
</layout>