<RelativeLayout android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="5dp"
    android:layout_weight="1"
    android:layout_marginVertical="2.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_item_bodypart_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/layout_bodypart_home"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_title_bodypart_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tập bụng"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description_bodypart_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="6 múi chuẩn không cần chỉnh"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>