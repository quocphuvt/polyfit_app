<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercise_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ExerciseDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="220dp"
                    android:background="#BCE0FD"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_exercise_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/video_exercise_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:showFullScreenButton="false" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_sets_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/primary"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Sets"
                            android:textColor="@color/title"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="@color/primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_reps_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/primary"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Reps"
                            android:textColor="@color/title"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:background="@color/primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rest_time_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="15s"
                            android:textColor="@color/primary"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Rest time"
                            android:textColor="@color/title"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!--        Content-->
                <LinearLayout
                    android:background="@color/white"
                    android:paddingBottom="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_ex_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="left"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Dumpbel press"
                        android:textColor="@color/title"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_intro_ex_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Bài tập cơ ngực phổ biến với mọi người có thể tập bất cứ đâu"
                        android:textColor="@color/primary"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_content_ex_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Bài tập cơ ngực phổ biến với mọi người có thể tập bất cứ đâu. Bài tập cơ ngực phổ biến với mọi người có thể tập bất cứ đâu. Bài tập cơ ngực phổ biến với mọi người có thể tập bất cứ đâu. Bài tập cơ ngực phổ biến với mọi người có thể tập bất cứ đâu. Bài tập cơ ngực phổ biến với mọi người có thể tập bất cứ đâu"
                        android:textColor="@color/content"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_second_exercise_details"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:paddingBottom="5dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="left"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Gợi ý bài tập liên quan"
                        android:textColor="@color/title"
                        android:textSize="@dimen/text_md"
                        android:textStyle="bold" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_suggested_exercise"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_tips"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|right"
        android:layout_margin="20dp"
        android:pointerIcon="alias"
        android:src="@drawable/ic_lightbulb_outline_white_24dp"
        app:fabCustomSize="55dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>