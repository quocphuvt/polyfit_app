<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"
    tools:context=".Login.LoginMethod">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <LinearLayout
              android:layout_marginBottom="50dp"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
              <ImageView
                  android:src="@drawable/polyfit"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
              <ImageView
                  android:layout_width="match_parent"
                  android:src="@drawable/healthy_body_balance_life"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

            <LinearLayout
                android:backgroundTint="#31A4F7"
                android:layout_margin="10dp"
                android:background="@drawable/backround_button_login_users"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:fontFamily="@font/roboto"
                    android:layout_marginHorizontal="30sp"
                    android:drawableLeft="@drawable/ic_facebook"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Continue with Facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:backgroundTint="#EA4335"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/backround_button_login_users"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:fontFamily="@font/roboto"
                    android:layout_marginHorizontal="30dp"
                    android:drawableLeft="@drawable/ic_google"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Continue with Google"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loginWithEmail"
                android:backgroundTint="#FFFFFF"
                android:layout_margin="10dp"
                android:background="@drawable/backround_button_login_users"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:fontFamily="@font/roboto"
                    android:textColor="#47484E"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Sign in with email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--<ImageView
                android:layout_marginTop="80dp"
                android:src="@drawable/already_have_account_log_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->
            <LinearLayout
                android:layout_weight="6"
                android:layout_marginTop="80dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:fontFamily="@font/roboto"
                    android:layout_weight="4"
                    android:textAlignment="textEnd"
                    android:textColor="#484B4B"
                    android:text="Don't have an account? "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end" />
                <TextView
                    android:id="@+id/tv_signUp"
                    android:fontFamily="@font/roboto"
                    android:textColor="#FFFFFF"
                    android:layout_weight="2"
                    android:text="Sign up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>




</LinearLayout>