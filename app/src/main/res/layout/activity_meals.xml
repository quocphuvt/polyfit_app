<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MealsActivity">
    <include layout="@layout/toolbar" />
    <RelativeLayout
        android:background="@drawable/header_gradient"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <devlight.io.library.ntb.NavigationTabBar
            android:id="@+id/tab_meals"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_centerInParent="true"
            app:ntb_corners_radius="30dp"
            android:layout_height="60dp"
            app:ntb_animation_duration="400"
            app:ntb_active_color="#FFFFFF"
            app:ntb_typeface="fonts/custom_typeface.ttf"
            app:ntb_badge_use_typeface="true"
            app:ntb_titled="true"
            app:ntb_swiped="true"
            app:ntb_bg_color="@color/primary"
            app:ntb_inactive_color="@color/noon"
            app:ntb_badge_size="10sp"
            app:ntb_title_size="10sp"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_meals"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>