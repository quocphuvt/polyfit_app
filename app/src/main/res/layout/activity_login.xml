<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"
    tools:context=".Login.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/polyfit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/healthy_body_balance_life"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

           <EditText
               android:id="@+id/edt_username"
               android:paddingLeft="20sp"
               android:textCursorDrawable="@color/place_holder"
               android:fontFamily="@font/roboto"
               android:hint="Email or username"
               android:background="@drawable/backround_button_login_users"
               android:layout_width="match_parent"
               android:layout_height="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <EditText
                    android:id="@+id/edt_password"
                    android:inputType="textPassword"
                    android:paddingLeft="20sp"
                    android:textCursorDrawable="@color/place_holder"
                    android:fontFamily="@font/roboto"
                    android:hint="Password"
                    android:background="@drawable/backround_button_login_users"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
                <LinearLayout
                    android:id="@+id/btn_Login"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/back_ground_button_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#FFFF"
                        android:textSize="20sp"
                        android:text="Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!--<ImageView
                    android:layout_marginTop="80dp"
                    android:src="@drawable/already_have_account_log_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>-->
                <LinearLayout
                    android:layout_weight="6"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:fontFamily="@font/roboto"
                        android:layout_weight="4"
                        android:textAlignment="textEnd"
                        android:textColor="#484B4B"
                        android:text="Don't have an account? "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                    <TextView
                        android:fontFamily="@font/roboto"
                        android:id="@+id/tvSignUp"
                        android:textColor="#FFFFFF"
                        android:layout_weight="2"
                        android:text="Sign up"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>